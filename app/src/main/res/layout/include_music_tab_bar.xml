<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/theme_read">

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/theme_layout_margin"
        android:src="@mipmap/actionbar_menu"
        android:layout_marginStart="@dimen/theme_layout_margin"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_menu"
        app:layout_constraintRight_toLeftOf="@+id/image_search">

        <ImageView
            android:id="@+id/bar_music"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:background="@drawable/actionbar_music" />
        <ImageView
            android:id="@+id/bar_net"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:background="@drawable/actionbar_disco" />

        <ImageView
            android:id="@+id/bar_friends"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:background="@drawable/actionbar_friends" />
    </LinearLayout>
    <ImageView
        android:id="@+id/image_search"
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/theme_layout_margin"
        android:src="@mipmap/actionbar_search"
        android:layout_marginEnd="@dimen/theme_layout_margin"/>
</android.support.constraint.ConstraintLayout>